---
import Section from "../Section.astro";

import { work } from "@cv";

const formatter = new Intl.DateTimeFormat("en-US", {
  year: "numeric",
  month: "short",
});
---

<Section title="Work Experience">
  <ul>
    {
      work.map(
        ({
          name,
          startDate,
          endDate,
          position,
          summary,
          highlights,
          url,
          skills,
        }) => {
          const startDateFormatted = formatter.format(new Date(startDate));
          const endDateFormatted = endDate ? formatter.format(new Date(endDate)) : 'present';
          const duration = `${startDateFormatted} - ${endDateFormatted}`;

          return (
            <li>
              <article>
                <header>
                  <div>
                    <h3>
                      <a href={url} title={`Ver ${name}`} target="_blank">
                        {name}
                      </a>
                    </h3>
                    <h4>{position}</h4>
                  </div>

                  <time>{duration}</time>
                </header>

                <footer>
                  <p>{summary}</p>
                </footer>
                <footer class="work-skills">
                  Skills:
                  <ul>{skills && skills.map((skill) => <li>{skill}</li>)}</ul>
                </footer>
              </article>
            </li>
          );
        }
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
    font-size: 1.2em;
    margin-bottom: 0.3em;
  }

  article a {
    color: #111;
  }

  article a:hover {
    text-decoration: underline;
  }

  article h4 {
    color: #222;
    font-weight: 400;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }

  footer {
    text-wrap: pretty;
  }

  .work-skills {
    margin-top: 7px;
    color: #666;
    font-size: 0.85rem;
    display: inline-flex;
    gap: 10px;

    ul {
      list-style: none;
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      gap: 5px;

      li {
        border-radius: 6px;
        background: #eee;
        color: #444;
        font-size: 0.6rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
      }
    }
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
